// Mobile number validation regex
  const validateMobileNumber = (mobileNumber) => {
    const regex = /^254\d{9}$/;
    return regex.test(mobileNumber);
  };

  // Handle form submission
  document.getElementById('paymentForm').addEventListener('submit', async (event) => {
    event.preventDefault(); // Prevent the form from submitting normally
    
    const phoneNumber = document.getElementById('phoneNumber').value;
    const amount = document.getElementById('amount').value;

    // Validate the mobile number
    if (!validateMobileNumber(phoneNumber)) {
      alert('Invalid mobile number. It should start with 254 and be exactly 12 digits.');
      return;
    } else if(validateMobileNumber(phoneNumber)){

    

    // Show the spinner while making the request
    document.getElementById('spinner').style.display = 'block';

    try {
      // Sending data via fetch
      const response = await fetch('/rkb/donate', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ paymentMethod: 'mpesa', amount, phoneNumber }),
      });

      const result = await response.json(); // Parse JSON response from the server
      console.log("Result status", result);

      // Hide the spinner once the request completes
      document.getElementById('spinner').style.display = 'none';

      if (result.status === 'success') {
        alert(result.message); // Show success message from backend
      } else {
        alert(result.message); // Show error message from backend
      }

    } catch (error) {
      // Hide the spinner on error
      document.getElementById('spinner').style.display = 'none';
      alert('There was an error processing your payment. Please try again later.');
    }
  }
